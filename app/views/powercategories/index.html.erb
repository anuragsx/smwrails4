<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>

<table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#823416" class="searchResultsTable">
	<h1>Power Categories</h1>
	
	<%= link_to "Create New Power Category", new_powercategory_path %>
	<tr>
		<th height="25" align="left">Category</th>
		<th height="25" align="left">Sub-Category</th>
		<th height="25" align="left"></th>
	</tr>
	<br/>

	<% @powercategories.each do |powercategory| %>
	<tr>
		<td align="center" valign="middle">
			<%=h powercategory.category %>
		</td>
		<td align="center" valign="middle">
			<%=h powercategory.subcategory %>
		</td>
		<td>
			<%= link_to "Remove", powercategory, :confirm => 'Are you sure?', :method => :delete %>
	</tr>

	<% end %>

</table>

