<div class="contactwidget">
  <%= form_for(@listing) do |f| %>
      <% if @listing.errors.any? %>
          <div id="errorExplanation">
            <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% @listing.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="year">
        <label>Year:</label>
        <%= f.text_field :year, :size => 15 %>
      </div>
      <div class="make">
        <label>Category:</label>
        <%= f.collection_select :category, @motocategories, :category, :category, :prompt => "-Select a Category" %>
      </div>
      <div>
        <label>Make:</label>
        <%= f.collection_select :make, @motomakes, :make, :make, :prompt => "-Select a Make" %>
      </div>
      <div class="Category">
        <label>Mileage:</label>
        <%= f.text_field :mileage, :size => 15 %>
      </div>
      <div>
        <label>VIN:</label>
        <%= f.text_field :vin, :size => 20 %>
      </div>

      <div>
        <label>Price:</label>
        <%= f.text_field :price, :size => 15 %>
      </div>

      <div>
        <label>Description:</label>
        <%= f.text_area :desc, :columns => 15, :rows => 20 %>
      </div>
      <div>
        <%= f.submit 'Submit Changes', :id => "Submit" %>
      </div>
  <%end%>
</div>