<h1>Photos for <%= @listing.model %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
  </tr>

	<% for photo in @photos %>
  	<tr>
	    <td><%=h photo.name %></td>
	    <td><%= image_tag listing_photo_path(@listing, photo, :jpg), :alt => photo.name %></td>
	    <td><%= link_to 'Show', listing_photo_path(@listing, photo) %></td>
	    <td><%= link_to 'Edit', edit_listing_photo_path(@listing, photo) %></td>
	    <td><%= link_to 'Destroy', listing_photo_path(@listing, photo), :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
</table>

<br />

<%= link_to 'New Photo', new_listing_photo_path(@listing) %>
<%= link_to 'Back to Listing', @listing %>
