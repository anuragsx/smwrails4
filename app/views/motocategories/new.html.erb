<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>
<table width="100%" border="0" cellpadding="20" cellspacing="0">
	<tr>
		<td align="left" valign="top">
			<% if @user.admin %>
				<h3>New Moto Category</h3>
				
				<%= form_for(@motocategory) do |f| %>
					<%= f.error_messages %>

					<p>
						<%= f.label :category %><br />
						<%= f.text_field :category %>
					</p>
					<p>
						<%= f.submit 'Create' %>
					</p>
				<% end %>

				<%= link_to 'Back', motocategories_path %>
			<% else %>
				<p>This page is for Administrators only!</p>
			<% end %>
		</td>
	</tr>
</table>
