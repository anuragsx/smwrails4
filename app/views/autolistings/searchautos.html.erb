<table width="883" border="0" cellpadding="20" cellspacing="0">
	<tr>
		<td width="100%" align="left" valign="top">
			<h3>Advanced Search for Autos</h3>
			
			<%= form_tag(autolistingsresults_new_autolistings_path) do |f| %>
					
					<%# f.fields_for @search.conditions do |listings| %>
						<%= label_tag "Year Between:" %><br/>
						<%= text_field_tag :year_gte, '', {:size => 7} %> and <%= text_field_tag :year_lte, '', :size => 7 %><br/>
						<%= label_tag "Category:" %><br/>
                        <%= select_tag(:category, options_for_select(@autocategories.map {|s| [s.category, s.category]},:selected => params[:category]),
                             :prompt => "-Select a Category")%><br/>
						<%= label_tag "Make:" %><br/>
                        <%= select_tag :make, options_for_select(@automakes.map {|s| [s.make, s.make]},:selected => params[:make]),
                             {prompt: "Select a Make"} %><br/>
						<%= label_tag "Model:" %><br/>

                        <%= select_tag :model, options_for_select(@automodels.map {|s| [s.model, s.model]}, :selected => params[:model]),
                             {:prompt => "-Select a Make First-"} %><br/>


						<%= label_tag "Price Between:" %><br/>
						<%= text_field_tag :price_gte, '', :size => 7 %> and <%= text_field_tag :price_lte, '', :size => 7 %><br/>
						
						<%# listings.fields_for @search.conditions.owner do |owner| %>
							<%= label_tag "State:" %><br/>
                            <%= select_tag(:state,options_for_select(Listing::STATES,:selected => params[:state]) , {:prompt => "-Select State"}) %><br/>
						<%# end %>
						
						<%= label_tag "Mileage:" %><br/>
						<%= text_field_tag :mileage_is, '', :size => 15 %><br/>
						<%= label_tag "Exterior Color:" %><br/>
						<%= text_field_tag :exterior_color_is, '', :size => 15 %><br/>
						<%= label_tag "Interior Color:" %><br/>
						<%= text_field_tag :interior_color_is, '', :size => 15 %><br/>
						<%= label_tag "Doors:" %><br/>
						<%= select_tag(:doors_is, options_for_select([[2,2],[3,3],[4,4],[5,5]],:selected => params[:doors_is]), {:prompt => "-Select Doors"}) %><br/>
						<%= label_tag "Engine:" %><br/>
						<%= select_tag(:engine_is, options_for_select(['3 Cylinder','4 Cylinder','5 Cylinder','6 Cylinder','7 Cylinder','8 Cylinder','9 Cylinder','10 Cylinder','11 Cylinder','12 Cylinder','Rotary','Alternative']), {:prompt => "-Select Engine"}) %><br/>
						<%= label_tag "Transmission:" %><br/>
						<%= select_tag(:transmission_is, options_for_select(['Auto','Manual']), {:prompt => "-Select Transmission"}) %><br/>
						<%= label_tag "Drive:" %><br/>
						<%= select_tag(:drive_is, options_for_select(['2WD','4WD','AWD']), {:prompt => "-Select Drive"}) %><br/>
						<%= label_tag "Fuel:" %><br/>
						<%= select_tag(:fuel_is, options_for_select(['Gasoline','Diesel','Alternative']), {:prompt => "-Select Fuel"}) %><br/>
						<%= label_tag "Description:" %><br/>
						<%= text_field_tag :desc_contains %><br/>
						<%= hidden_field_tag :listingtype_is, "auto" %>
						<br/>
						<%= submit_tag "Search Autos", :id => "Submit" %>
						
					<%# end %>

			<% end %>

		</td>
	</tr>
</table>
