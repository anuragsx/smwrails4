<h1>New message</h1>

<%= form_for(@message) do |f| %>
    <% if @message.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @message.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <p>
    <%= f.hidden_field :sender_id, :value => @sender.id %>
  </p>
  <p>
    <%= f.label :recipient_id %><br />
    <%= f.text_field :recipient_id, :readonly => :true, :value => '1' %>
  </p>
  <p>
    <%= f.label :listing_id %><br />
    <%= f.text_field :listing_id %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>
