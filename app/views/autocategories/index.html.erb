<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>

<table width="100%" border="1" cellpadding="0" cellspacing="0" bordercolor="#823416" class="searchResultsTable">
	<h1>Autocategories</h1>
	
	<%= link_to "Create New Autocategory", new_autocategory_path %>
	<tr>
		<th height="25" align="left">Category</th>
		<th height="25" align="left"></th>
	</tr>
	<br/>

	<% @autocategories.each do |autocategory| %>
	<tr>
		<td align="center" valign="middle">
			<%=h autocategory.category %>
		</td>
		<td>
			<%= link_to "Remove", autocategory, :confirm => 'Are you sure?', :method => :delete %>
	</tr>

	<% end %>

</table>

