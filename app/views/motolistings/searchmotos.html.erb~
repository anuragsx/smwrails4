						<%= listings.collection_select :make_is, @motomakes, :make, :make, {:prompt => "-Select a Make-"} %><br/>
						<%= listings.label "Price Between:" %><br/>
						<%= listings.text_field :price_gte, :size => 7 %> and <%= listings.text_field :price_lte, :size => 7 %><br/>
						
