    <div class="clear"></div>
    <div class="contactwidget">
      <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
      <% end %>
      <%= form_for @message, :url => {:controller => "messages", :action => "create"} do |f| %>
          <% if @message.errors.any? %>
              <div id="errorExplanation">
                <h2><%= pluralize(@message.errors.count, "error") %> prohibited this post from being saved:</h2>

                <ul>
                  <% @message.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <%= f.hidden_field :recipient_id, :value => 1 %>
      <form action="#">
        <div class="username">
          <label>Name*</label>
          <%= f.text_field :name, :size => 35, :tabindex => 1 %>
        </div>
        <div class="youremail">
          <label>your email*</label>
          <%= f.text_field :email, :size => 35, :tabindex => 2 %>
        </div>
        <div class="phoneno">
          <label>phone</label>
          <%= f.text_field :phone, :size => 35, :tabindex => 3 %>
        </div>
        <div class="subject">
          <label>subject*</label>
          <%= f.text_field :subject, :size => 35, :tabindex => 3 %>
        </div>
        <div class="message">
          <label>message*</label>
          <%= f.text_area :body, :cols => 32, :rows => 10, :tabindex => 4 %>
        </div>
        <%= image_submit_tag "sendbutton.jpg", :alt => "submit", :size => "54x25", :border => 0 %>
      <%end%>
